<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reserve_coach"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.fitness.com.fitness.Activities.ReserveCoachActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reserve_backimg"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="预约私教"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/reserve_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/coach_name"
        android:hint="张三"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/per_coach_price"
        android:hint="300元/天"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/st_time_btn"
        android:text="选择开始日期"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/regbtn"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/en_time_btn"
        android:text="选择结束日期"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/regbtn"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/sum_coach_price"
        android:hint="总计：0元"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/reserve_coach_reserve"
        android:text="点击预订"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/regbtn"
        android:layout_marginTop="50dp" />
    
</LinearLayout>
